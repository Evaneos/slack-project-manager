{
    "manifest_version": 2,

    "name": "Trello-Slack",
    "description": "This extension makes the link between trello and slack",
    "version": "0.1",
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["style.css"],
            "js": ["main.js"]
        }
    ]
}