{
    "manifest_version": 2,

    "name": "Trello-Slack",
    "description": "This extension makes the link between trello and slack",
    "version": "0.1",
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.slack.com/*"],
            "css": ["style.css"],
            "js": ["jquery-1.7.1.min.js", "trello.js", "main.js"],
            "run_at": "document_start"
        }
    ]
}